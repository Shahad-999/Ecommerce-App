<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.EcommerceApp" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:colorAccent">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary</item>

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>


    </style>

    <style name="Theme.EcommerceApp" parent="Base.Theme.EcommerceApp" />

    <style name="Theme.EcommerceApp.Starting" parent="Theme.EcommerceApp">
        <item name="android:windowBackground">@drawable/logo</item>

        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/primary</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>

    </style>
</resources>